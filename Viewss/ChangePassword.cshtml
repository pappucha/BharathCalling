@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/app/ChangePassword/ChangePassword.js"></script>

@Html.AntiForgeryToken()
<div ng-controller="changePasswordCntrl">
    
    <div class="form-group">
        <span ng-model="errrmsg" id="errrmsg" class="error"></span>
    </div>
     
    <div class="form-group">
        <label for="inputUserName" class="col-sm-2 control-label">User Name</label>
        <div class="col-sm-10">
            <input type="text" ng-model="userName" id="userName" class="form-control" disabled />
        </div>
    </div>


    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Old Password</label>
        <div class="col-sm-10">
            <input type="password" ng-model="oldpwd" id="oldpwd" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">New Password</label>
        <div class="col-sm-10">
            <input type="password" ng-model="newpwd" ng-keyup="testPassword()" id="newpwd" maxlength="100" class="form-control" />
            <span ng-show="!Error.Key.valid" class="error">
                {{Error.Key.msg}}
            </span>
            <div class="" style="color: green !important;">{{passwordStrength(newpwd)}}</div>
            <span class="hint-text green">{{Error.Key.strength}}</span>

        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Confirm Password</label>
        <div class="col-sm-10">
            <input type="password" ng-model="cnfpwd" class="form-control" id="cnfmpwd" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" id="changepwd" value="Change Password" ng-click="changePassword()" class="btn btn-success" />
            @*<div class="">{{validateconfirmpassword(oldpwd)}}</div>*@

            <input type="button" value="Close" id="resetField" class="btn btn-success" ng-click="Cancel()" />
        </div>
    </div>
</div>

